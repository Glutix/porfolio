---
interface Props {
  id: string;
  title: string;
  icon: any;
}

const { id, title, icon: Icon }: Props = Astro.props;
---

<section>
  <span><Icon class="icon" /></span>
  <h2 id={id}>{title}</h2>
</section>

<style>
  section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    width: 35px;
    height: 35px;
    color: var(--text-normal);
  }

  span {
    display: flex;
    align-items: center;
  }

  h2 {
    color: var(--text-normal);
  }
</style>
