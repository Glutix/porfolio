---
import Social from "./Social.astro";
import { Image } from "astro:assets";
import imagenHeader from "../assets/imagen-header.png";
---

<header id="home">
  <picture class="image-container">
    <Image
      class="image"
      src={imagenHeader}
      alt="fotografia de perfil"
      loading={"eager"}
    />
  </picture>

  <div class="container">
    <h1>Hola, soy Ricardo</h1>
    <article>
      <h2>
        <span class="enfasis">Desarrollador Web Full Stack.</span>
        <span class="low-enfasis">De Chaco, Argentina.</span>
        <span class="low-enfasis-1"
          >Especializado en crear aplicaciones Ãºnicas.</span
        >
      </h2>
    </article>

    <section class="social-section">
      <Social />
    </section>
  </div>
</header>

<style>
  header {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    box-sizing: border-box;
  }

  .image-container {
    flex-shrink: 0;
    position: relative;
    max-height: 50%;
  }

  .image {
    border-radius: 24px;
    width: 100%;
    height: 430px;
    margin-top: 16px;
    object-fit: cover;
    filter: drop-shadow(0 8px 32px var(--image-shadow));
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
  }

  .image:hover {
    transform: translateY(-4px);
    filter: drop-shadow(0 12px 40px var(--image-shadow));
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
  }

  .container h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    height: fit-content;
    width: fit-content;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  article {
    display: flex;
    flex-direction: column;
    height: fit-content;
    width: 100%;
    margin-bottom: 2rem;
  }

  article h2 {
    font-size: clamp(1.25rem, 3vw, 2rem);
    max-width: 50ch;
    height: fit-content;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-left: 2px;
    line-height: 1.3;
  }

  .enfasis {
    color: var(--text-enfasis);
    font-weight: 600;
  }

  .low-enfasis {
    color: var(--text-enfasis-1);
    font-weight: 500;
  }

  .low-enfasis-1 {
    color: var(--text-enfasis-2);
    font-weight: 400;
  }

  .social-section {
    margin-top: auto;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    header {
      gap: 2rem;
      padding: 1.5rem;
    }

    .image {
      height: 350px;
    }

    .container {
      max-height: 300px;
    }
  }

  /* Mobile Large */
  @media (max-width: 768px) {
    header {
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      padding: 8rem 1rem 2rem;
      text-align: center;
      min-height: 100vh;
    }

    .image-container {
      order: 1;
    }

    .image {
      width: 100%;
      height: 45vh;
    }

    .container {
      order: 2;
      align-items: center;
      text-align: center;
      max-height: none;
      width: 100%;
      height: auto;
      justify-content: flex-start;
    }

    .container h1 {
      margin-bottom: 1rem;
    }

    article {
      margin-bottom: 2rem;
    }

    article h2 {
      max-width: 100%;
      justify-content: center;
      align-items: center;
      padding-left: 0;
      gap: 0.5rem;
    }

    .social-section {
      margin-top: 0;
    }
  }

  /* Mobile Medium */
  @media (max-width: 480px) {
    header {
      gap: 1.5rem;
      padding: 5rem 0.75rem 2rem;
      min-height: 100vh;
    }

    .image {
      height: 45vh;
    }

    article {
      margin-bottom: 1.5rem;
    }

    article h2 {
      gap: 0.5rem;
      font-size: clamp(1rem, 4vw, 1.25rem);
    }

    .container h1 {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
      margin-bottom: 0.75rem;
    }

    .social-section {
      margin-top: 0;
    }
  }

  /* Mobile Small */
  @media (max-width: 390px) {
    header {
      padding: 4.5rem 0.5rem 2rem;
      gap: 1rem;
    }

    .image-container {
      height: 45dvh;
    }

    .container {
      height: 50dvh;
      justify-content: center;
      gap: 1rem;
    }

    .container h1 {
      font-size: clamp(1.5rem, 5vw, 2rem);
    }

    article {
      margin-bottom: 1rem;
    }

    article h2 {
      font-size: clamp(0.9rem, 3.5vw, 1.1rem);
      gap: 0.4rem;
    }
  }

  /* Mobile Extra Small */
  @media (max-width: 320px) {
    header {
      padding: 4rem 0.25rem 1.5rem;
    }

    .image {
      height: 30vh;
    }

    .container h1 {
      font-size: clamp(1.25rem, 4vw, 1.75rem);
    }

    article h2 {
      font-size: clamp(0.85rem, 3vw, 1rem);
    }
  }
</style>
