---
import Social from "./Social.astro";
import { Image } from "astro:assets";
import img1 from "../assets/img1.jpg";
import TypingEffect from "./TypingEffect.astro";
---

<header id="home">
  <div class="eyebrow">
    <span class="dot"></span>
    <span>Disponible para proyectos</span>
  </div>

  <div class="layout">
    <div class="content">
      <h1>
        <TypingEffect
          text="Hola, soy Ricardo"
          speed={42}
          groupId="header"
          order={0}
        />
      </h1>

      <div class="divider"></div>

      <article>
        <TypingEffect
          text="Desarrollador Web Full Stack. De Chaco, Argentina. Especializado en crear aplicaciones únicas."
          className="multi-enfasis subtitle-typing"
          speed={22}
          groupId="header"
          order={1}
        />
      </article>

      <section class="social-section">
        <Social />
      </section>
    </div>

    <!-- Image with Option A effect -->
    <div class="image-wrapper">
      <!-- Animated glow layer (behind image) -->
      <div class="glow" aria-hidden="true"></div>

      <picture class="image-container">
        <Image
          class="image"
          src={img1}
          alt="Fotografía de perfil de Ricardo"
          loading="eager"
          width={400}
          height={560}
        />
      </picture>

      <!-- Scanlines overlay -->
      <div class="scanlines" aria-hidden="true"></div>

      <!-- Subtle accent tint top-left -->
      <div class="tint" aria-hidden="true"></div>

      <!-- Corner brackets -->
      <span class="corner tl" aria-hidden="true"></span>
      <span class="corner tr" aria-hidden="true"></span>
      <span class="corner bl" aria-hidden="true"></span>
      <span class="corner br" aria-hidden="true"></span>
    </div>
  </div>
</header>

<style>
  header {
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 5.5rem 0 4rem;
    box-sizing: border-box;
    gap: 1.5rem;
  }

  /* ─── Eyebrow ────────────────────────────────────────────── */
  .eyebrow {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    font-size: 0.7rem;
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-normal);
  }

  .dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: var(--text-enfasis);
    box-shadow: 0 0 7px var(--text-enfasis);
    flex-shrink: 0;
    animation: pulse 2.5s ease infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  /* ─── Layout row ─────────────────────────────────────────── */
  .layout {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 3.5rem;
    width: 100%;
    min-height: 380px;
  }

  /* ─── Text block ─────────────────────────────────────────── */
  .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  h1 {
    font-size: clamp(2.4rem, 5vw, 3.8rem);
    line-height: 1.15;
    margin: 0 0 1rem;
    color: var(--text-title);
    min-height: calc(clamp(2.4rem, 5vw, 3.8rem) * 1.15);
  }

  .divider {
    width: 40px;
    height: 2px;
    background: var(--text-enfasis);
    border-radius: 2px;
    margin-bottom: 1.5rem;
    transform: scaleX(0);
    transform-origin: left;
    animation: growLine 0.45s ease 0.2s forwards;
  }

  @keyframes growLine {
    to {
      transform: scaleX(1);
    }
  }

  article {
    margin-bottom: 2.5rem;
    min-height: 5.5rem;
  }

  :global(.subtitle-typing .typing-line:nth-child(1) .typing) {
    font-size: 1.2rem;
    color: var(--text-title);
    font-weight: 600;
  }

  :global(.subtitle-typing .typing-line:nth-child(2) .typing) {
    font-size: 1.1rem;
    color: var(--text-normal);
  }

  :global(.subtitle-typing .typing-line:nth-child(3) .typing) {
    font-size: 1.1rem;
    color: var(--text-enfasis);
    font-style: italic;
  }

  h1 :global(.typing) {
    color: var(--text-title);
  }

  .social-section {
    margin-top: auto;
    padding-top: 1rem;
  }

  /* ─── Image wrapper ──────────────────────────────────────── */
  .image-wrapper {
    position: relative;
    flex-shrink: 0;
    width: 260px;
    aspect-ratio: 5 / 7;
    border-radius: 8px;
    /* Transition for hover lift */
    transition: transform 0.4s ease;
  }

  .image-wrapper:hover {
    transform: translateY(-6px);
  }

  /* ── Glow (behind image, z-index 0) ─────────────────────── */
  .glow {
    position: absolute;
    inset: -2px;
    border-radius: 10px;
    z-index: 0;
    /*
      Two-layer shadow:
      - Bottom: warm yellow glow (matches --text-enfasis)
      - Top edge: very subtle lift
      Uses the yellow from your palette directly so it
      adapts naturally between dark/light mode glow intensity.
    */
    box-shadow:
      0 22px 55px rgba(240, 228, 128, 0.32),
      0 8px 20px rgba(240, 228, 128, 0.15),
      0 -4px 16px rgba(240, 228, 128, 0.06);
    transition: box-shadow 0.4s ease;
  }

  .image-wrapper:hover .glow {
    box-shadow:
      0 32px 80px rgba(240, 228, 128, 0.48),
      0 12px 30px rgba(240, 228, 128, 0.25),
      0 -6px 20px rgba(240, 228, 128, 0.1);
  }

  /* ── Image itself ────────────────────────────────────────── */
  .image-container {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 1;
    border-radius: 8px;
    overflow: hidden;
  }

  .image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top center;
    border-radius: 8px;
  }

  /* ── Scanlines (above image, z-index 2) ──────────────────── */
  .scanlines {
    position: absolute;
    inset: 0;
    z-index: 2;
    border-radius: 8px;
    pointer-events: none;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.1) 2px,
      rgba(0, 0, 0, 0.1) 4px
    );
    /* Fade scanlines a bit on hover for a "power-up" feel */
    opacity: 1;
    transition: opacity 0.4s ease;
  }

  .image-wrapper:hover .scanlines {
    opacity: 0.4;
  }

  /* ── Accent tint top-left (z-index 2) ────────────────────── */
  .tint {
    position: absolute;
    inset: 0;
    z-index: 2;
    border-radius: 8px;
    pointer-events: none;
    background: linear-gradient(
      135deg,
      rgba(240, 228, 128, 0.07) 0%,
      transparent 55%
    );
    mix-blend-mode: screen;
  }

  /* ── Corner brackets (z-index 3) ─────────────────────────── */
  .corner {
    position: absolute;
    width: 14px;
    height: 14px;
    border-color: var(--text-enfasis);
    border-style: solid;
    opacity: 0.7;
    z-index: 3;
    transition:
      opacity 0.4s ease,
      width 0.4s ease,
      height 0.4s ease;
  }

  .corner.tl {
    top: 6px;
    left: 6px;
    border-width: 2px 0 0 2px;
  }
  .corner.tr {
    top: 6px;
    right: 6px;
    border-width: 2px 2px 0 0;
  }
  .corner.bl {
    bottom: 6px;
    left: 6px;
    border-width: 0 0 2px 2px;
  }
  .corner.br {
    bottom: 6px;
    right: 6px;
    border-width: 0 2px 2px 0;
  }

  /* Corners expand slightly on hover */
  .image-wrapper:hover .corner {
    opacity: 1;
    width: 18px;
    height: 18px;
  }

  /* ─── Tablet ─────────────────────────────────────────────── */
  @media (max-width: 768px) {
    header {
      align-items: center;
      padding: 5rem 0 3.5rem;
      text-align: center;
    }

    .eyebrow {
      justify-content: center;
    }

    .layout {
      flex-direction: column-reverse;
      align-items: center;
      gap: 2rem;
      min-height: unset;
    }

    .content {
      align-items: center;
    }
    .divider {
      transform-origin: center;
    }

    :global(.subtitle-typing) {
      align-items: center;
    }

    .image-wrapper {
      width: 200px;
      aspect-ratio: 5 / 7;
    }

    .social-section {
      margin-top: 0;
      display: flex;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    header {
      padding: 4.5rem 0 3rem;
    }
    h1 {
      font-size: clamp(1.9rem, 7vw, 2.5rem);
    }
    .image-wrapper {
      width: 160px;
    }
  }
</style>
