<style is:global>
  :root {
    color-scheme: light dark;
  }

  [data-color-scheme="light"] {
    --primary-color: #f8f9ff;
    --secundary-color: #333;
    --secundary-color-variant: #5f5f5f;
    --btn-hover: #eab308;
    --text-title: #000000;
    --text-normal: #242422;
    --text-normal-variant: #fff;
    --text-enfasis: #ffbf00;
    --text-enfasis-1: #ff0019b2;
    --text-enfasis-2: #00429a;
    --image-shadow: #c5a134;

    --form-btn-text: #fff;
    --form-btn-backgroud: #333;
    --form-btn-hover: #eab308;
    --form-btn-disable: #5f5f5f;

    --form-input-bg: #fff;
    --form-input-bg-focus: #fff;
  }

  [data-color-scheme="dark"] {
    --primary-color: #121212;
    --secundary-color: #3f3f3f;
    --secundary-color-variant: #12121293;
    --btn-hover: #5c5b5b;
    --text-title: #fff;
    --text-normal: #d7d7d7;
    --text-normal-variant: #d7d7d7;
    --text-enfasis: #f0e480;
    --text-enfasis-1: #ec829d;
    --text-enfasis-2: #b8d2ef;
    --image-shadow: #ffffff80;

    --form-btn-text: #000;
    --form-btn-backgroud: #f0e480;
    --form-btn-hover: #fded5b;
    --form-btn-disable: #f0e480;

    --form-input-text: #fff;
    --form-input-bg: #272727;
    --form-input-bg-focus: #3f3f3f;
  }

  html {
    font-family: "Montserrat Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
    background-color: var(--primary-color);

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: var(--text-title);
      text-wrap: balance;
    }

    h1 {
      font-size: 34px;
      line-height: 34px;
      margin: 0;
    }

    h2 {
      font-size: 30px;
      line-height: 30px;
      margin: 0;
    }

    h3 {
      font-size: 26px;
      line-height: 26px;
      margin: 0;
    }

    p {
      text-wrap: pretty;
      font-size: 18px;
      line-height: 28px;
    }
  }

  body {
    margin: 0;
    padding: 0;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    position: relative;
    align-items: center;
    min-height: 100vh;
    overscroll-behavior: none;
    width: 100%;
    background-color: var(--primary-color);
    color: var(--text-normal);
    transition: all 1s ease;
  }
</style>
